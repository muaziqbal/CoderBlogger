.continer
  .clearfix.mb3.md-show
    .col.sm-col-11.p2
      =form_tag jobs_path, method: :get do
        .col-1.inline.font-x-lg.mr1= label_tag :q, icon('search')
        = text_field_tag :q, params[:q], placeholder: 'Search Jobs by Location, Title, or Company', class: 'field col-5'
        .col-1.inline.ml1
          = check_box_tag :show_fulltime, true, params[:show_fulltime]
          = label_tag :show_fulltime, 'Full Time'
          = check_box_tag :show_contract, true, params[:show_contract]
          = label_tag :show_contract, 'Contracting'
          = check_box_tag :show_remote, true, params[:show_remote]
          = label_tag :show_remote, 'Remote'
        .col-1.inline.ml1
          = submit_tag 'Search', class: 'rounded border-purple purple btn px1 py1'
    .col.sm-col-1

  .clearfix
    .col.sm-col-9
      - if @featured
        =render @featured, feature: true

      =render @jobs, feature: false
